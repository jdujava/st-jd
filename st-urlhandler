#!/bin/sh

urlregex="(((http|https|gopher|gemini|ftp|ftps|git)://|www\\.)[a-zA-Z0-9.]*[:]?[a-zA-Z0-9./@$&%?$\#=_~-]*)|((magnet:\\?xt=urn:btih:)[a-zA-Z0-9]*)"
# pdfregex="(pdf:[0-9]*[:]?[a-zA-Z0-9\(\).,/@$&%?$\#=_~-]+( [a-zA-Z0-9\(\).,/@$&%?$\#=_~-]+)*)"
pdfregex="(pdf:[0-9]*[:]?( *[a-zA-Z0-9\(\)\+>.,/@$&%?$\#=_~-]+)*)"

urls="$(sed 's/.*â”‚//g' | tr -d '\n' | # First remove linebreaks and mutt sidebars:
	grep -aEo "$urlregex|$pdfregex" | # grep only urls as defined above.
    sed -re 's/(\s)*(>)(\s)*//g' | # handle possible line break
	uniq | # Ignore neighboring duplicates.
	sed 's/^www./http:\/\/www\./g')" # xdg-open will not detect url without http://

[ -z "$urls" ] && exit 1

while getopts "hoc" o; do case "${o}" in
	h) printf "Optional arguments for custom use:\\n  -c: copy\\n  -o: xdg-open\\n  -h: Show this message\\n" && exit 1 ;;
	# o) chosen="$(echo "$urls" | dmenu -i -p 'Follow which url?' -l 10)"
	o) chosen="$(echo "$urls" | fmenu -g 100x15 -- --prompt 'Follow which url? ')"
	setsid xdg-open "$chosen" >/dev/null 2>&1 & ;;
	c) echo "$urls" | fmenu -g 100x15 -- --prompt 'Copy which url?' | tr -d '\n' | xclip -selection clipboard ;;
	*) printf "Invalid option: -%s\\n" "$OPTARG" && exit 1 ;;
esac done
